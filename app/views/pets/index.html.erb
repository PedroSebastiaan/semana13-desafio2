<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthdate</th>
      <th>Visitas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count%></td>
        <td><%= link_to 'Show', client_pet_path(pet.client_id, pet.id) %></td>
        <td><%= link_to 'Edit', edit_client_pet_path(pet.client_id, pet.id) %></td>
        <td><%= link_to 'Destroy', client_pets_destroy_path(pet.client_id, pet.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_client_pet_path(@client.id) %>
<%= link_to 'Back', client_path(@client.id) %>