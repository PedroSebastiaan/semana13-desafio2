<div class="container my-5">
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Name:</strong>
    <%= @client.name %>
  </p>
  <p>
    <strong>Phone:</strong>
    <%= @client.phone %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @client.email %>
  </p>
  <p>
    <strong>Pets info</strong>
  </p>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Max height</th>
        <th>Max weight</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @client.pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.max_weight %></td>
          <td><%= pet.max_height %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
  <%= link_to 'Go to pets', client_pets_path(@client.id) %>
  </p>
  <%= link_to 'Edit', edit_client_path(@client) %> |
  <%= link_to 'Back', clients_path %>
</div>

